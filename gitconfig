[user]
	name = Jared Bold
	email = jaredbold@gmail.com
[alias]
	update = "submodule foreach  --recursive 'branch=\"$(git config -f $toplevel/.gitmodules submodule.$name.branch)\"; git checkout $branch'"
  graph = "log --oneline --graph"
  p = "pull"
  pr = "pull --rebase"
  clean-branches = "!git fetch -p && for branch in $(git branch -vv | grep ': gone]' | gawk '{print $1}'); do git branch -d $branch; done"
  cmr = "create-mr --no-staging --no-merge --delete-source-branch"
  last-tag = "!f() { git describe --abbrev=0 --tags --match $@; }; f"
  su = "submodule update --init"
  top = "rev-parse --show-toplevel"
  lbranch = "!git for-each-ref --sort=-committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'"
  rbi = "rebase -i"
  cmb = "!f() { git fetch && git checkout -b $1 origin/core_master --no-track && git su; }; f"
  ccnb = "!f() { git fetch && git checkout -b $1 origin/cc_next --no-track && git su; }; f"

[push]
	default = simple

[core]
	excludesfile = ~/.gitignore
	lintcheck = false
	warningscheck = false
  
[include]
  path = ~/.gitconfig.user
[help]
	autocorrect = 1

[hub]
	host = github.ibm.com
